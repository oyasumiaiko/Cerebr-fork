{
  "manifest_version": 3,
  "name": "Cerebr",
  "version": "1.6.4",
  "description": "Cerebr - 智能AI聊天助手",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "commands",
    "activeTab",
    "tabs",
    "webRequest",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": ["<all_urls>", "file:///*", "https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_title": "打开 Cerebr 侧边栏",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "open_sidebar": {
      "description": "打开 Cerebr 侧边栏"
    },
    "close_sidebar": {
      "description": "关闭 Cerebr 侧边栏"
    },
    "clear_chat": {
      "description": "清空聊天记录"
    },
    "quick_summary": {
      "description": "快速总结当前页面"
    },
    "quick_summary_query": {
      "description": "使用 [query] 提示词的快速总结"
    },
    "toggle_temp_mode": {
      "description": "切换网页对话模式"
    },
    "capture_screenshot": {
      "description": "截取当前页面截图添加到消息中"
    },
    "toggle_fullscreen": {
      "description": "切换全屏模式"
    },
    "add_page_content_to_context": {
      "description": "获取当前网页内容并添加到对话（不发送）"
    },
    "open_standalone_chat": {
      "description": "打开独立聊天页面"
    }
  },
  "background": {
    "service_worker": "src/extension/background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": [
      "src/ui/sidebar/sidebar.html",
      "lib/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/pdf.js",
        "src/utils/element-picker.js",
        "src/extension/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
